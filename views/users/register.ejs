<% layout('layouts/boilerplate') %>

<div class="container d-flex justify-content-center align-items-center mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3 col-xl-5 offset-xl-4">
      <div class="card shadow">
        <img
          src="https://images.unsplash.com/photo-1496545672447-f699b503d270?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MjB8fGNhbXBpbmd8ZW58MHx8MHx8fDA%3D"
          class="card-img-top"
          alt=""
        />
        <div class="card-body">
          <h5 class="card-title">Register</h5>
          <form action="/register" method="POST" class="validated-form" novalidate>
            <div class="mb-3">
              <label class="form-label" for="username">username</label>
              <input
                class="form-control"
                type="text"
                id="username"
                name="username"
                required
                autofocus
              />
              <div class="valid-feedback">Looks good</div>
            </div>
          
            <div class="mb-3">
              <label class="form-label" for="email">Email</label>
              <input class="form-control" type="email" id="email" name="email" required />
              <div class="valid-feedback">Looks good</div>
            </div>
          
            <div class="mb-3">
              <label class="form-label" for="password">Password</label>
              <input class="form-control" type="password" id="passowrd" name="password" required />
              <div class="valid-feedback">Looks good</div>
            </div>
          
            <button class="btn btn-warning">Register</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>







